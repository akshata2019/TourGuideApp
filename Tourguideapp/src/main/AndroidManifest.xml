<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.RegistrationActivity" />
        <activity android:name=".Activity.ApplicationStatusActivity"/>
        <activity android:name=".Activity.BookingActivity"/>
        <activity android:name=".Activity.ProfileActivity"/>
        <activity android:name=".Activity.TouristRegistrationActivity"/>
        <activity android:name=".Activity.TouristTourActivity"/>
        <activity android:name=".Activity.TourDetailsActivity"/>
        <activity android:name=".Activity.FilterActivity"/>
        <activity android:name=".Activity.TouristTourDetailsActivity"/>
        <activity android:name=".Activity.TourGuideActivity"/>
        <activity android:name=".Activity.GuideDetailsActivity"/>
    </application>

</manifest>