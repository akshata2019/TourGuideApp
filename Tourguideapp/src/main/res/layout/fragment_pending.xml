<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/avatar"
            android:id="@+id/profile"

            />

        <TextView
            android:id="@+id/upcomingTours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=" John joseph"
            android:textColor="@color/colorSecondry"
            android:textSize="17dp" />
        <ImageView
            android:id="@+id/map"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/maps"
            android:layout_below="@id/profile"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/touristName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upcomingTours"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:text="Mumbai"
            android:textColor="@color/colorSecondry"

            />
        <ImageView
            android:id="@+id/calender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar"
            android:layout_below="@id/map"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tourDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/touristName"

            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:text="Tour Date and Time :05/05/2019"
            android:textColor="@color/colorSecondry" />

        <ImageView
            android:id="@+id/imageverified"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/upcomingTours"
            app:srcCompat="@drawable/notverified" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imagecorrect"
            app:srcCompat="@drawable/warning"

            />

        <ImageView
            android:id="@+id/imagecorrect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/verification"
            android:layout_toRightOf="@id/imageverified"

            />



    </RelativeLayout>
