<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:gravity="center"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <TextView
        android:id="@+id/data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MY TOUR"
        android:textSize="30sp"
        android:textColor="@color/colorHeader"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/login_bg"/>



    <EditText
        android:id="@+id/entermail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:ems="15"
        android:hint="User Name"
        style="@style/edit_text"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/username_white"
        android:singleLine="true"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:ems="15"
        android:hint="Password"
        style="@style/edit_text"
        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/password_white"
        android:singleLine="true"
        android:imeOptions="actionDone" />
    <!--<LinearLayout
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinner1"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/user_array"
            android:prompt="@string/user_type"
            />
    </LinearLayout>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login As"
        android:layout_marginLeft="7dp"
        style="@style/text_view_header"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_group"
        android:layout_marginLeft="7dp">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide"
            android:layout_weight="1"
            android:checked="true"
            android:id="@+id/radio_guide"
            style="@style/RadioButton"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tourist"
            android:layout_weight="1"
            android:id="@+id/radio_tourist"
            style="@style/RadioButton"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/colorHeader"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/clickhereText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorTextSecondry"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="200dp"
        android:layout_height="44dp"
        style="@style/style_button"
        android:text="LOGIN"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="44dp"
        style="@style/style_button"
        android:text="REGISTER"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

</LinearLayout>