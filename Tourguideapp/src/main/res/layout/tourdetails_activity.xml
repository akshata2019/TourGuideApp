<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >
            <ImageView
                android:id="@+id/backImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tour Name"
                android:textSize="20dp"
                android:textColor="@color/colorSecondry"
                android:layout_marginLeft="80dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="71dp"
                app:layout_constraintStart_toStartOf="parent"

                />

        </android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/documentText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/spinner1"
            android:text="Location Name"
            android:textColor="@color/colorText"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="313dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <ImageView
            android:id="@+id/docFirst"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/documentText"
            android:src="@drawable/upload"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/documentText"/>

        <ImageView
            android:id="@+id/docSecond"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/documentText"
            android:src="@drawable/upload"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/documentText"
            app:layout_constraintLeft_toRightOf="@id/docFirst"

            />

        <ImageView
            android:id="@+id/docThird"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/documentText"
            android:src="@drawable/upload"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/docSecond"
            app:layout_constraintTop_toBottomOf="@id/documentText"
            />

        <ImageView
            android:id="@+id/docFourth"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/documentText"
            android:src="@drawable/upload"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/docThird"
            app:layout_constraintTop_toBottomOf="@id/documentText"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toRightOf="@id/documentText"/>
        <TextView
            android:id="@+id/touristName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourist Name"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/docFirst"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/docFirst"
           app:layout_constraintLeft_toRightOf="@id/touristName"/>
        <TextView
            android:id="@+id/touristLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourist Location"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/touristName"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tourTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 may 2019 01.00 AM - 03.00 PM"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/touristLocation"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions : Any Request by Tourist"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tourTime"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/lineFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---------------------------------------------------------------"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/instruction"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/lineSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---------------------------------------------------------------"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lineFirst"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lineSecond"
            app:layout_constraintStart_toStartOf="parent"/>


        <EditText
            android:id="@+id/editComments"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="4"
            android:background="@color/colorToolbar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/comments"/>

        <Button
            android:id="@+id/buttonReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:background="@drawable/button_rounded"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/editComments"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="Accept"
            android:background="@drawable/button_rounded"

            android:layout_marginBottom="50dp"
            app:layout_constraintTop_toBottomOf="@id/editComments"
            app:layout_constraintLeft_toRightOf="@id/buttonReject"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

