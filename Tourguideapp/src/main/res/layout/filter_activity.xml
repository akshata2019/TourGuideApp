<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >
            <ImageView
                android:id="@+id/backImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/filter"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="0dp"
                />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="20dp"
                android:textColor="@color/colorSecondry"
                android:layout_marginLeft="250dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="71dp"
                app:layout_constraintStart_toStartOf="parent"

                />

            <ImageView
                android:id="@+id/notVerified"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/notverified"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                />

        </android.support.v7.widget.Toolbar>




        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Location Near"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"/>


        <EditText
            android:id="@+id/editComments"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="2"
            android:background="@color/colorToolbar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/comments"/>

        <TextView
            android:id="@+id/locationRedious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Radious"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/editComments"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/clear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="184dp"
            android:layout_marginTop="20dp"
            android:text="clear"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toRightOf="@id/locationRedious"
            app:layout_constraintTop_toBottomOf="@id/editComments" />
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar1"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationRedious"/>
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/seekbar1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/clear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="20dp"
            android:text="clear"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toRightOf="@id/locationRedious"
            app:layout_constraintTop_toBottomOf="@id/seekbar1" />
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar2"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration"
            />
        <TextView
            android:id="@+id/themePrefrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/clear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="20dp"
            android:text="clear"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toRightOf="@id/locationRedious"
            app:layout_constraintTop_toBottomOf="@id/btn5" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="12dp"
            android:text="1 * Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidePrefrence" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="12dp"
            android:text="2 * Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidePrefrence" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="252dp"
            android:layout_marginLeft="252dp"
            android:layout_marginTop="12dp"
            android:text="3 * Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidePrefrence" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="72dp"
            android:text="4 * Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidePrefrence" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="72dp"
            android:text="5 * Rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidePrefrence" />
        <TextView
            android:id="@+id/guidePrefrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guide preferences"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/seekbar2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/clear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="184dp"
            android:layout_marginTop="20dp"
            android:text="clear"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toRightOf="@id/locationRedious"
            app:layout_constraintTop_toBottomOf="@id/seekbar2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="Beach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="12dp"
            android:text="Cultural"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="12dp"
            android:text="Adventural"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="64dp"
            android:text="Treking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="64dp"
            android:text="jungle safari"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="64dp"
            android:text="festivals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themePrefrence" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>

