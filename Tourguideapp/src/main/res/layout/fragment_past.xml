<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:visibility="visible"
        android:padding="10dp">


    <TextView
            android:id="@+id/pastTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abu Dhabi Tour"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/avatar"
            android:id="@+id/profile"
            android:layout_below="@id/pastTour"

            />

        <TextView
            android:id="@+id/upcomingTours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=" John joseph"
            android:layout_below="@id/pastTour"
            android:textColor="@color/colorSecondry"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/calender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar"
            android:layout_below="@id/profile"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tourDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upcomingTours"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="05/05/2019"
            android:textColor="@color/colorHeader" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/upcomingTours"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:id="@+id/imageverified"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/notverified" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/warning"

                />
        </LinearLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
